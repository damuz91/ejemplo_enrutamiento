<%= form_with(model: sale, local: true) do |form| %>
  <% if sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :employee_id %>
    <%= form.select :employee_id, options_for_select(Employee.all.map{|e| ["#{e.name} - #{e.store.name}", e.id]}) %>
  </div>

  <div class="field">
    <%= form.label :product_id %>
    <%= form.select :product_id, options_for_select(Product.all.map{|e| [e.name, e.id]}) %>
  </div>

  <div class="field">
    <%= form.label :value %>
    <%= form.number_field :value %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
